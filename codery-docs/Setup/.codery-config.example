# Codery Configuration File Example
# Copy this to .codery-config in your project root and update with your values

# Startup Config Prompts : uTNC, uGS, uGR, uGC, uJC, uJA

# -----  Trigger a new Concatenated Files
createNewConcatenatedTriggerFile  = "./.TriggerConcatenated"

# ----- STARTUP
useCoderyStartup = "YES"
useCoderyCustomStartup = "NO"

# ----- LIFECYCLE
useCoderyLifeCycle = "YES"
useCustomCoderyLifeCycles = "NO"

# ----- ROLES
useCoderyRoles = "YES"
useCustomRoles  = "NO"
CoderyRolesPath
CustomCoderyRolesPath

# ----- COMMANDS
useCoderyCommands = "YES"
useCustomCoderyCommands  = "NO"

# ----- JIRA

useJIRA = "YES"
useJjiraCLI = "YES" 
useJiraAPI = "NO"
JiraConfigPath = "./"

JiraCLIBase = "jira --config ./.jira.d/config.yml"
#JiraCLIBase = "jira"



# ----- BRANCH
useBranchLogic = "YES"
DEVELOPMENT="DEVL"
TESTING="TEST"
PRODUCTION="PROD"
DEFAULT_BRANCH="DEVL"


# ----- Application PLAYBOOKS
useApplicationPlaybooks = "YES"

# Application Playbooks (Optional)
# Define paths to application-specific documentation
# Can be either a folder (all .md files will be concatenated) or a single file

# Examples:
# Appl_Playbook_ItsJustMagic='public/Playbooks/Magic/'
# Appl_Playbook_MobileApp='mobile/documentation/playbook.md'


